<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Edit User</title>

  <style>
    :root { --blue:#4b6cb7; --bg:#f3f5f9; }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      background: var(--bg);
      font-family: "Segoe UI", sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      padding: 16px;
    }

    .box {
      width: 100%;
      max-width: 420px;
      padding: 26px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
    }

    h2 {
      text-align: center;
      margin: 0 0 14px;
      font-size: 22px;
      font-weight: 800;
    }

    input, select {
      width: 100%;
      padding: 12px;
      margin: 8px 0;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 15px;
    }

    select.disabled {
      background: #e9ecef;
      color: #555;
      cursor: not-allowed;
    }

    .btn {
      width: 100%;
      padding: 12px;
      margin-top: 12px;
      border: none;
      border-radius: 8px;
      background: var(--blue);
      color: white;
      font-size: 15px;
      font-weight: 700;
      cursor: pointer;
    }

    .back {
      display: block;
      margin-top: 12px;
      padding: 12px;
      border-radius: 8px;
      background: #555;
      color: white;
      text-align: center;
      font-weight: 700;
      text-decoration: none;
    }

    .msg {
      margin-top: 12px;
      padding: 10px;
      border-radius: 8px;
      font-weight: 700;
      text-align: center;
      font-size: 14px;
    }

    .ok { background: #d4edda; color:#155724; }
    .err { background: #f8d7da; color:#721c24; }
  </style>
</head>

<body>
  <div class="box">
    <h2>Edit User</h2>

    <form method="POST" action="/admin/users/update/<%= user._id %>">

      <input name="name" type="text" value="<%= user.name %>" required>
      <input name="email" type="email" value="<%= user.email %>" required>

      <input name="password" type="password" placeholder="New password (optional)" />

      <select name="department" required>
        <% departments.forEach(d => { %>
          <option value="<%= d._id %>"
            <%= user.department && user.department.toString() === d._id.toString() ? 'selected' : '' %>>
            <%= d.name %>
          </option>
        <% }) %>
      </select>

      <!-- Role shown but not editable -->
      <select disabled class="disabled">
        <option <%= user.role === 'Student' ? 'selected' : '' %>>Student</option>
        <option <%= user.role === 'Professor' ? 'selected' : '' %>>Professor</option>
        <option <%= user.role === 'HOD' ? 'selected' : '' %>>HOD</option>
      </select>

      <input type="hidden" name="role" value="<%= user.role %>" />

      <button class="btn" type="submit">Update User</button>
    </form>

    <a href="/admin/users" class="back">Back to Users</a>

    <% if (success) { %>
      <div class="msg ok"><%= success %></div>
    <% } %>

    <% if (error) { %>
      <div class="msg err"><%= error %></div>
    <% } %>
  </div>
</body>
</html>
