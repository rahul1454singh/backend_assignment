<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    /* Reset / base */
    * { box-sizing: border-box; margin:0; padding:0; }
    html,body { height:100%; }
    body {
      font-family: "Segoe UI", sans-serif;
      background: linear-gradient(135deg, #e9f0ff, #f3f5f9);
      color: #222;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      transition: background 0.25s;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
    }

    /* Top navbar */
    .navbar {
      background: #4b6cb7;
      height: 64px;
      display: flex;
      align-items: center;
      padding: 0 16px;
      position: relative;
      box-shadow: 0 2px 6px rgba(0,0,0,0.06);
      z-index: 60;
    }

    /* Menu button (top-left) */
    .menu-toggle {
      width:44px;
      height:44px;
      display:flex;
      align-items:center;
      justify-content:center;
      cursor:pointer;
      border-radius:8px;
      transition: background .15s;
      flex: 0 0 auto;
    }
    .menu-toggle:hover { background: rgba(255,255,255,0.06); }

    .menu-toggle .bars {
      display:flex;
      flex-direction:column;
      gap:6px;
      align-items:center;
      justify-content:center;
    }
    .menu-toggle .bars span {
      display:block;
      width:20px;
      height:2.6px;
      background:white;
      border-radius:2px;
      transition: transform .18s, opacity .12s;
    }

    /* Title centered */
    .navbar .title {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      font-weight: 800;
      color: white;
      font-size: 20px;
      text-align: center;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 60%;
    }

    /* Right side (hello & logout) */
    .navbar .right {
      margin-left: auto;
      display:flex;
      gap:12px;
      align-items:center;
      color:white;
      font-weight:600;
      z-index: 70;
    }
    .navbar a.logout {
      color:white;
      text-decoration:none;
      font-weight:700;
      border-radius:6px;
      padding:6px 10px;
    }

    /* Layout wrapper */
    .page-wrap {
      display:flex;
      gap:20px;
      align-items:flex-start;
      padding: 20px;
      transition: padding-left .25s;
      position: relative;
      flex: 1 1 auto;
    }

    /* Sidebar */
    .sidebar {
      width: 240px;
      min-width: 240px;
      background: white;
      border-radius: 10px;
      padding: 12px;
      box-shadow: 0 8px 24px rgba(15,35,60,0.06);
      transform: translateX(-18px);
      opacity: 0;
      pointer-events: none;
      transition: transform .28s ease, opacity .25s ease, width .2s ease, padding .2s ease;
      z-index: 55;
      position: relative;
    }
    .sidebar a {
      display:block;
      padding:12px 14px;
      margin-bottom:10px;
      border-radius:8px;
      text-decoration:none;
      color:#333;
      background:#f5f6f8;
      text-align:center;
      font-weight:700;
      transition: background .15s, color .15s;
    }
    .sidebar a:hover { background:#eef3ff; }
    .sidebar a.active { background:#4b6cb7; color:white; }

    /* Main content area */
    .main {
      flex:1;
      transition: margin-left .25s ease, width .25s ease, filter .25s ease, opacity .25s ease;
      min-height: calc(100vh - 64px - 120px);
    }

    .container {
      background: rgba(255,255,255,0.96);
      border-radius: 12px;
      padding: 28px;
      box-shadow: 0 8px 28px rgba(13,40,90,0.06);
      transition: box-shadow .2s, max-width .22s ease, margin .22s ease, background .22s ease, transform .2s ease;
      backdrop-filter: none;
    }

    .container h1 {
      text-align:center;
      font-size:34px;
      margin-bottom: 20px;
      color:#222;
      font-weight:800;
    }

    .overview {
      display:grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 22px;
      align-items:center;
    }

    /* Card base */
    .card {
      padding:20px 18px;
      border-radius:12px;
      text-align:center;
      color:#001f3f;
      box-shadow: 0 6px 18px rgba(13,40,90,0.04);
    }
    .card h3 { margin:0; color:#6b6b6b; font-size:14px; font-weight:700; }
    .card p { font-size:28px; font-weight:800; margin-top:8px; color:#001f3f; }

    /* Custom card colors to match screenshot */
    .card.departments { background:#e8f2ff; }  /* light blue */
    .card.students    { background:#e9fdf0; }  /* light green */
    .card.professors  { background:#fff3e7; }  /* light peach */
    .card.hods        { background:#f6ecff; }  /* light purple */

    /* When sidebar is open: show sidebar and shrink main */
    body.sidebar-open .sidebar {
      transform: translateX(0);
      opacity: 1;
      pointer-events: auto;
    }

    /* overlay effect: blur and transparency when menu open */
    body.sidebar-open .main {
      filter: blur(3px);
      opacity: 0.35;
      transition: all .25s ease-in-out;
      pointer-events: none;
    }

    /* Also make container more transparent when sidebar open so background shows */
    body.sidebar-open .main .container {
      background: rgba(255,255,255,0.6);
      box-shadow: 0 6px 20px rgba(13,40,90,0.04);
    }

    body.sidebar-open::before {
      content: "";
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.18);
      z-index: 45;
    }

    /* when sidebar closed collapse it visually for full-width feel */
    body:not(.sidebar-open) .sidebar {
      transform: translateX(-28px);
      opacity: 0;
      pointer-events: none;
      width: 0;
      min-width: 0;
      padding: 0;
      margin-right: 0;
    }

    /* center the container horizontally and make it wide when sidebar hidden */
    body:not(.sidebar-open) .main .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    /* when sidebar open make container shrink a bit to fit beside sidebar */
    body.sidebar-open .main .container {
      max-width: 940px;
      margin-left: 12px;
    }

    /* Tiny interactions for menu button */
    .menu-toggle.open .bars span:nth-child(1) { transform: translateY(6px) rotate(45deg); }
    .menu-toggle.open .bars span:nth-child(2) { opacity: 0; }
    .menu-toggle.open .bars span:nth-child(3) { transform: translateY(-6px) rotate(-45deg); }

    /* Responsive: on small screens, sidebar overlays instead of pushes */
    @media (max-width: 900px) {
      .page-wrap { padding: 12px; }
      .sidebar {
        position: absolute;
        top: 78px;
        left: 12px;
        width: 260px;
        min-width: 0;
      }
      body.sidebar-open .sidebar { z-index: 50; }
      body.sidebar-open .main .container { max-width: calc(100% - 300px); margin-left: 300px; }
      body:not(.sidebar-open) .main .container { max-width: 100%; margin: 0 auto; }
      .navbar .title { font-size:18px; left:50%; transform:translateX(-50%); }
    }

    @media (max-width: 600px) {
      .navbar { padding: 0 10px; }
      .menu-toggle { width:40px; height:40px; }
      .navbar .title { font-size:16px; left:50%; transform:translateX(-50%); max-width: 68%; }
      .container { padding:18px; }
      .container h1 { font-size:22px; }
      .overview { gap:12px; }
      .card p { font-size:22px; }
      .sidebar { top:72px; left:10px; width:240px; }
    }

    @media (min-width:1300px) {
      body:not(.sidebar-open) .main .container { max-width: 1400px; }
      .container { padding:32px; }
    }

    /* ---------- Logout modal styles (screenshot-like) ---------- */
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.45);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 2000;
    }
    .modal-box {
      background: white;
      padding: 22px 26px;
      border-radius: 10px;
      width: 360px;
      max-width: calc(100% - 40px);
      text-align: center;
      box-shadow: 0 12px 32px rgba(0,0,0,0.18);
      animation: fadeIn .18s ease;
    }
    .modal-box h3 {
      font-size: 20px;
      margin-bottom: 10px;
      font-weight: 800;
      color: #222;
    }
    .modal-box p {
      margin: 0;
      color: #333;
      font-weight: 600;
      margin-bottom: 16px;
    }
    .modal-actions {
      margin-top: 12px;
      display: flex;
      justify-content: center;
      gap: 16px;
    }
    .btn-no {
      padding: 10px 22px;
      border-radius: 8px;
      background: #c62828; /* red */
      color: white;
      border: none;
      font-weight: 800;
      cursor: pointer;
      box-shadow: 0 6px 14px rgba(198, 40, 40, 0.16);
    }
    .btn-no:hover { filter: brightness(0.95); transform: translateY(-1px); }

    .btn-yes {
      padding: 10px 22px;
      border-radius: 8px;
      background: #2e9a3f; /* green */
      color: white;
      border: none;
      font-weight: 800;
      cursor: pointer;
      box-shadow: 0 6px 14px rgba(46, 154, 63, 0.12);
    }
    .btn-yes:hover { filter: brightness(0.95); transform: translateY(-1px); }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.98); }
      to { opacity: 1; transform: scale(1); }
    }

    /* Footer */
    .app-footer {
      background: transparent;
      padding: 16px 20px;
      text-align: center;
      color: #5b6b6b;
      font-size: 13px;
      border-top: 1px solid rgba(15,35,60,0.04);
      flex-shrink: 0;
    }
    .footer-title {
      font-weight: 800;
      color: #222;
      margin-bottom: 6px;
    }
    .footer-sub {
      color: #6b6b6b;
      margin-top: 6px;
    }
  </style>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
  <!-- Navbar -->
  <div class="navbar">
    <!-- menu button always top-left -->
    <div id="menuBtn" class="menu-toggle" aria-label="Toggle menu" title="Menu">
      <div class="bars" aria-hidden="true">
        <span></span><span></span><span></span>
      </div>
    </div>

    <!-- centered title -->
    <div class="title">University Admin Dashboard</div>

    <div class="right">
      <div style="font-size:14px; opacity:0.95; margin-right:8px;">Hello, <%= adminName %></div>
      <a href="#" id="logoutLink" class="logout" aria-haspopup="dialog">Logout</a>
    </div>
  </div>

  <!-- Page content -->
  <div class="page-wrap">
    <!-- Sidebar (menu) - Professors & HODs removed -->
    <nav class="sidebar" id="sidebar" aria-hidden="true">
      <a href="/admin/dashboard" class="active">Dashboard Overview</a>
      <a href="/admin/departments">Departments</a>
      <a href="/admin/users">Users</a>
    </nav>

    <!-- Main -->
    <main class="main" id="mainContent">
      <div class="container" role="main" aria-live="polite">
        <h1>Dashboard Overview</h1>

        <div class="overview">
          <div class="card departments" role="article" aria-label="Total Departments">
            <h3>Total Departments</h3>
            <p><%= totalDepartments %></p>
          </div>

          <div class="card students" role="article" aria-label="Total Students">
            <h3>Total Students</h3>
            <p><%= totalStudents %></p>
          </div>

          <div class="card professors" role="article" aria-label="Total Professors">
            <h3>Total Professors</h3>
            <p><%= totalProfessors %></p>
          </div>

          <div class="card hods" role="article" aria-label="Total HODs">
            <h3>Total HODs</h3>
            <p><%= totalHODs %></p>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Footer with app info -->
  <footer class="app-footer" role="contentinfo">
    <div class="footer-title">University Assignment Approval System</div>
    <div class="footer-sub">© <%= new Date().getFullYear() %> University — All rights reserved.</div>
  </footer>

  <!-- LOGOUT CONFIRMATION MODAL -->
  <div id="logoutModal" class="modal-overlay" aria-hidden="true" role="dialog" aria-labelledby="logoutTitle">
    <div class="modal-box" role="document">
      <h3 id="logoutTitle">Are you sure you want to logout?</h3>
      <p>This will end your session.</p>

      <div class="modal-actions" role="group" aria-label="Logout choices">
        <button id="cancelLogout" class="btn-no">No</button>
        <button id="confirmLogout" class="btn-yes">Yes</button>
      </div>
    </div>
  </div>

  <script>
    // Toggle behavior: add/remove class to body and save preference
    (function() {
      const menuBtn = document.getElementById('menuBtn');
      const sidebar = document.getElementById('sidebar');

      function setOpen(open) {
        document.body.classList.toggle('sidebar-open', open);
        menuBtn.classList.toggle('open', open);
        sidebar.setAttribute('aria-hidden', !open);
        try { localStorage.setItem('sidebarOpen', open ? '1' : '0'); } catch(e){}
      }

      // read from localStorage (if any)
      const stored = (function(){
        try { return localStorage.getItem('sidebarOpen'); } catch(e){ return null; }
      })();

      if (stored === '1') setOpen(true);

      // click toggles sidebar
      menuBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        setOpen(!document.body.classList.contains('sidebar-open'));
      });

      // close sidebar on ESC
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && document.body.classList.contains('sidebar-open')) {
          setOpen(false);
        }
      });

      // click outside sidebar closes it when open
      document.addEventListener('click', (e) => {
        if (!document.body.classList.contains('sidebar-open')) return;
        if (!sidebar.contains(e.target) && !menuBtn.contains(e.target)) {
          setOpen(false);
        }
      });
    })();

    // LOGOUT modal functionality
    (function() {
      const logoutLink = document.getElementById('logoutLink');
      const logoutModal = document.getElementById('logoutModal');
      const cancelBtn = document.getElementById('cancelLogout');
      const confirmBtn = document.getElementById('confirmLogout');

      function openModal() {
        logoutModal.style.display = 'flex';
        logoutModal.setAttribute('aria-hidden', 'false');
        cancelBtn.focus();
      }

      function closeModal() {
        logoutModal.style.display = 'none';
        logoutModal.setAttribute('aria-hidden', 'true');
        logoutLink.focus();
      }

      // open modal
      logoutLink.addEventListener('click', (e) => {
        e.preventDefault();
        openModal();
      });

      // No -> cancel
      cancelBtn.addEventListener('click', () => {
        closeModal();
      });

      // Yes -> go to /logout
      confirmBtn.addEventListener('click', () => {
        window.location.href = '/logout';
      });

      // close modal on Escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && logoutModal.style.display === 'flex') {
          closeModal();
        }
      });

      // click outside modal box closes it
      logoutModal.addEventListener('click', (e) => {
        if (e.target === logoutModal) closeModal();
      });
    })();
  </script>
</body>
</html>
